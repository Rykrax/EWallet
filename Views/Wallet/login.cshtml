@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Đăng Nhập";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}


@section Scripts {
    @* <script src="~/js/register.js"></script> *@
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/validator.js" asp-append-version="true"></script>
    <script>
        Validator('#login-form', {
            onSubmit: (data) => {
                @* console.log("xinchào ",data); *@
                handleLogin(data);
            },
        });
    </script>
}


<div class="body-container d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-12 mx-auto">
                <div class="myform">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Đăng nhập</h1>
                        </div>
                    </div>
                    <div id="successAlert" class="alert alert-success alert-dismissible fade show d-none" role="alert"></div>
                    <div id="errorAlert" class="alert alert-danger alert-dismissible fade show d-none" role="alert"></div>
                    <form method="post" action="" id="login-form">
                            <div class="form-group mb-3">
                                <label for="phoneNumber" class="form-label">Số điện thoại</label>
                                <input type="text" name="phoneNumber" rules="required|sdt" id="phoneNumber" class="form-control">
                                <div class="form-message"></div>
                            </div>

                            <div class="form-group mb-3">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input type="password" name="password" rules="required|min:6" id="password" class="form-control">
                                <span class="form-message"></span>
                            </div>

                            <div class="row mb-4 mt-4">
                                <div class="col d-flex justify-content-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="remember"/>
                                        <label class="form-check-label" for="remember"> Nhớ mật khẩu </label>
                                    </div>
                                </div>

                                <div class="col text-center">
                                    <a href="#!" class="text-decoration-none">Quên mật khẩu?</a>
                                </div>
                            </div>

                            <div class="col-md-12 text-center">
                                <button class=" btn btn-block mybtn btn-primary tx-tfm">Đăng nhập</button>
                            </div>

                            <div class="form-group mt-3">
                              <p class="text-center">Không có tài khoản? <a href="/register" id="signup">Đăng ký</a></p>
                           </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>